<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="container" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/roomsWindow.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kanyojozsef96.controller.RoomsWindowController">
   <top>
      <MenuBar styleClass="menu" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#onBackMenuItemClicked" text="Back" />
                <MenuItem mnemonicParsing="false" onAction="#onCloseMenuItemClicked" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TableView styleClass="table" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn styleClass="table__row--1" text="id" />
          <TableColumn styleClass="table__row--2" text="name" />
          <TableColumn styleClass="table__row--3" text="roomType" />
          <TableColumn styleClass="table__row--4" text="Actions" />
        </columns>
      </TableView>
   </center>
</BorderPane>
