<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="400.0" prefWidth="400.0" styleClass="container" fx:controller="com.kanyojozsef96.controller.RulesWindowController" stylesheets="@../css/rulesWindow.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar styleClass="menu" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem onAction="#onCloseMenuItemClicked" mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="rulesTable" styleClass="table" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" styleClass="table__row--1" text="name" />
            </columns>
        </TableView>
    </center>
</BorderPane>